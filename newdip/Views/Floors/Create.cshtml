@model newdip.Models.Floor

@{
    ViewBag.Title = "Добавить этаж";
}
    <body class="container body-content">
        <h2 style="text-align:center">    Имя здания - @ViewBag.Name</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <p class="control-label col-md-2">
                        Номер этажа
                    </p>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Level, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                   
                    @Html.Hidden("BuildingId", @ViewBag.BuildingId as string)
                    @*<<div class="col-md-10">
                        @Html.DropDownList("BuildingId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.BuildingId, "", new { @class = "text-danger" })
                    </div>*@
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Добавить" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        </body>
        <div>
            @Html.ActionLink("К списку зданий", "Index", "Buildings")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
