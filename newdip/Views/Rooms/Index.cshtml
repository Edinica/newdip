@model IEnumerable<newdip.Models.Room>

@{
    ViewBag.Title = "Index";
}
<body class="container body-content">
    <h2 style="text-align:center">Список помещений</h2>

    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr>

            <th>
                Имя помещения
            </th>
            <th>
                Описание
            </th>

            <th>
                Почта
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Site)
                </td>
                <td>
                    @* @Html.ActionLink("Edit", "Edit", new { id=item.RoomId }) |*@
                    @Html.ActionLink("Подробно", "Details", new { id = item.RoomId }) 
                    @if (User.IsInRole("Admin")) {@Html.ActionLink("Удалить", "Delete", new { id = item.RoomId })}
                </td>
            </tr>
        }

    </table>
    </body>
