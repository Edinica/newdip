@model newdip.Models.ApplicationUser

@{
    ViewBag.Title = "Удаление пользователя";
}
    <body class="container body-content">
        <h2 style="text-align:center">Удаление пользователя</h2>

        <h3>Вы уверены что хотите удалить выбранного пользователя?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Имя пользователя:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserName)
                </dd>

                <dt>
                    Почта пользователя:
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Удалить" class="btn btn-default" /> |
                    @Html.ActionLink("К списку пользователей", "Index")
                </div>
            }
        </div>
        </body>